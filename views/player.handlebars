                }]
            }
        }
    });

    new Chart(document.getElementById("thirdChart"), {
        type: 'bar',
        data: {
            labels: ['2016', '2015', '2014'],
            datasets: [{
                data: data3,
                label: label3,
                backgroundColor: "#83cacf",
                fill: false
            }]
        },
        options: {
            responsive: false,
            title: {
                display: true,
                text: 'Player Stats'
            },
            scales: {
                yAxes: [{
                    display: true,
                    ticks: {
                        suggestedMin: 0

                    }
                }]
            }
        }
    });

    new Chart(document.getElementById("fourthChart"), {
        type: 'bar',
        data: {
            labels: ['2016', '2015', '2014'],
            datasets: [{
                data: data4,
                label: label4,
                backgroundColor: "#2e62a1",
                fill: false
            }]
        },
        options: {
            responsive: false,
            title: {
                display: true,
                text: 'Player Stats'
            },
            scales: {
                yAxes: [{
                    display: true,
                    ticks: {
                        suggestedMin: 0

