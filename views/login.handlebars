<!-- START wrapper-->
<div data-toggle="notify"
     data-message="&lt;b&gt;Wrong Credentials!&lt;/b&gt; Please check email or password!"
     data-options="{&quot;status&quot;:&quot;danger&quot;, &quot;pos&quot;:&quot;top-right&quot;}"
     class="hidden-xs">

</div>
<div style="height: 100%; padding: 50px 0; background-color: #2c3037" class="row row-table">
    <div class="col-lg-3 col-md-6 col-sm-8 col-xs-12 align-middle">
        <!-- START panel-->
        <div data-toggle="play-animation" data-play="zoomIn" data-offset="0" data-duration="300"
             class="panel panel-default panel-flat">
            <p class="text-center mb-lg">
                <br>
                <a href="#">
                    <img src="../app/img/logo.png" alt="Image" class="block-center img-rounded">
                </a>
            </p>
            <p class="text-center mb-lg">
                <strong>SIGN IN</strong>
            <p class="signwarning text-center ">{{this.data}}</p>
            </p>

            <div class="panel-body">
                <form role="form" action="/login" method="post" class="mb-lg">
                    <div class="form-group has-feedback">
                        <label for="exampleInputEmail1" class="text-muted">Email</label>
                        <input id="exampleInputEmail1" type="email" placeholder="Enter email" class="form-control"
                               name="emailAddress">
                    </div>
                    <div class="form-group has-feedback">
                        <label for="exampleInputPassword1" class="text-muted">Password</label>
                        <input id="exampleInputPassword1" type="password" placeholder="Password" class="form-control"
                               name="password">
                    </div>
                    <div class="clearfix">
                        <div class="checkbox c-checkbox pull-left mt0">
                            <label>
                                <input type="checkbox" value="">
                        </div>
                        <div class="pull-center"><a href="/signup" class="text-muted">Don't have an account?
                            Sign up</a>
                        </div>
                    </div>
                    <button type="submit" class="btn-espn btn-block btn-espnred">Sign In</button>
                </form>
            </div>
        </div>
        <!-- END panel-->
    </div>
</div>
<!-- END wrapper-->